/* pages/jryq/jryq.wxss */

.section-cover{
  margin: 0 30rpx;
  height: 300rpx;
  /* background: red; */
}
.section-cover>image{
  width: 100%;
  height: 100%;
}
/* form */
.form-item {
  margin: 20rpx 30rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #c0c0c0;
  display: flex;
  align-items: center;
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  margin: 0 20rpx;
}

.pickerDate {
  display: flex;
}

.date {
  display: inline-block;
}

.value {
  width: 60rpx;
  text-align: center;
}

.btnBox {
  height: 200rpx;
  display: flex;
  align-items: center;
}

.blank{
  width: 100%;
  height: 350rpx;
}

.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  border-radius: 6rpx;
  text-align: center;
  background: #938463;
  color: white;
}
