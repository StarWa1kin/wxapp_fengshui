/* pages/jryq/jryq.wxss */

.section-cover{
  margin: 0 30rpx;
  height: 300rpx;
}
.section-cover>image{
  width: 100%;
  height: 100%;
}
/* form */

.form-item {
  margin: 0 30rpx;
  height: 100rpx;
  border: 1rpx solid #c9c9c9;
  display: flex;
  align-items: center;
}
.first-item{
  margin-top:40rpx; 
}

.label {
  font-size: 30rpx;
  font-weight: bold;
  margin: 0 20rpx;
}

.pickerDate {
  display: flex;
}

.date {
  display: inline-block;
}

.value {
  width: 60rpx;
  text-align: center;
}

.btnBox {
  height: 200rpx;
  display: flex;
  align-items: center;
}

.blank{
  width: 100%;
  height: 350rpx;
}

.btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  border-radius: 6rpx;
  text-align: center;
  background: #938463;
  color: white;
}



.modalImg{
  width: 560rpx;
  height: 420rpx;
}
.modalImg>image{
  width: 100%;
  height: 100%;
}