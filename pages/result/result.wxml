<!--pages/result/result.wxml-->

<view class='imgRes'>
  <image src='../../images/result.jpg'></image>
  <view class='title'>{{result.titleshang}}
    <text class='gold' style='color:#93825a'>\r{{result.titlexia}}</text>
  </view>
  <view class='title-fu'>{{result.titlefu}}</view>
</view>

<view class='detail'>
  <view class='topic'>签文详解</view>
  <view class='body'>
    <view class='poetry font'>诗意: {{result.shiyi}}</view>
    <view class='xy font'>解曰: {{result.jieyue}}</view>
    <view class='story font'>故事: {{result.gushi}}</view>
  </view>
</view>


<view class='share'>
  <view>
    <view class='btn' bindtap='again'>再求一签</view>
    <view class='btn backBtn' open-type="share">分享给好友</view>
  </view>
</view>