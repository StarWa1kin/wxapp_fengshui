/* pages/gcdg/gcdg.wxss */

.section-cover {
  height: 950rpx;
  padding: 20rpx 20rpx;
}

.section-cover>image {
  width: 100%;
  height: 100%;
}

.topic {
  height: 120rpx;
  line-height: 120rpx;
  margin: 0 30rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #c9c9c9;
}

.hot-item {
  width: 100%;
  height: 200rpx;
  border-bottom: 1rpx solid #c9c9c9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hot-item>view {
  height: 160rpx;
  margin: 0 30rpx;
}

.imgBox {
  width: 35%;
}

.imgBox>image {
  width: 100%;
  height: 100%;
}

.detailBox {
  width: 55%;
}

.txtBox {
  height: 50%;
}

.blod {
  font-weight: bold;
}

.detailTxt {
  font-size: 24rpx;
}

.introduce {
  width: 100%;
  height: 300rpx;
  font-size: 27rpx;
  font-weight: bold;
  color: #5b5b5b;
}

.introduce>view {
  padding: 0 30rpx;
}

/* 业务  */

.section-business {
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
}

.section-business>view {
  width: 340rpx;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  background: #938463;
  border-radius: 8rpx;
  color: white;
  font-size: 30rpx;
}

.singel {
  margin-left: 30rpx;
  margin-top: 10rpx;
}

.double {
  margin-right: 30rpx;
  margin-top: 10rpx;
}

/* 二维码 */

.seciton-QRcode {
  display: flex;
  height: 300rpx;
  align-items: center;
  justify-content: space-around;
}

.QRcode-box {
  width: 240rpx;
  height: 240rpx;
  background: silver;
}

.QRcode-box>image {
  width: 100%;
  height: 100%;
}

.info {
  width: 440rpx;
  height: 240rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.leanMore {
  font-size: 42rpx;
}

.little {
  font-size: 24rpx;
}

/* 更多业务  */

.itemMore {
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: space-between;
  height: 320rpx;
}

.item-header {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.itemMore>view {
  width: 340rpx;
  height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  background: #938463;
  border-radius: 8rpx;
  color: white;
  font-size: 30rpx;
}
